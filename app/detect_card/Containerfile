FROM docker.io/opensuse/tumbleweed:latest AS detect_card_service
RUN zypper install -y tesseract-ocr-devel tesseract-ocr-traineddata-fra
ENV RUST_LOG info
COPY target/release/detect_card .
COPY keywords_cards.json .
CMD ["./detect_card"]

FROM docker.io/python:3.10-slim-bullseye AS detect_card_service_test
ENV Q_CARD_IMAGE Q_CARD_IMAGE
RUN pip install --upgrade pip; pip install pika opencv-python-headless
COPY test_images/*.jpg ./
COPY service_test/send_an_image_to_rabbitmq.py ./
CMD ["python","send_an_image_to_rabbitmq.py"]
